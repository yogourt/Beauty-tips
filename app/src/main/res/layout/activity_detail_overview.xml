<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blogspot.android_czy_java.beautytips.view.detail.DetailOverviewActivity">


    <fragment
        android:id="@+id/fragment_header"
        android:name="com.blogspot.android_czy_java.beautytips.view.detail.DetailHeaderFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/fragment_ingredients"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="@dimen/activity_margin"/>

    <fragment
        android:id="@+id/fragment_ingredients"
        android:name="com.blogspot.android_czy_java.beautytips.view.detail.DetailIngredientsFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/horizontal_margin_detail_ingredients"
        android:layout_marginEnd="@dimen/horizontal_margin_detail_ingredients"
        app:layout_constraintBottom_toTopOf="@+id/fragment_bottom_action"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_header" />

    <fragment
        android:id="@+id/fragment_bottom_action"
        android:name="com.blogspot.android_czy_java.beautytips.view.detail.DetailBottomActionFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/activity_margin"
        android:layout_marginTop="@dimen/activity_margin"/>

</androidx.constraintlayout.widget.ConstraintLayout>
