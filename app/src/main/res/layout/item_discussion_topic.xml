<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/comment_padding">

    <include
        layout="@layout/item_discussion_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_margin"
        android:layout_marginEnd="@dimen/activity_margin"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/reply_button_start_margin"
        android:text="@string/reply"
        android:textColor="@color/purple100"
        android:textSize="@dimen/small_text_size"
        android:textStyle="bold" />

    <include
        android:id="@+id/new_comment_layout"
        layout="@layout/layout_new_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/reply_start_margin"
        android:layout_marginTop="@dimen/new_comment_vert_margin"
        android:layout_marginBottom="@dimen/new_comment_vert_margin"
        android:layout_marginEnd="@dimen/activity_margin"
        android:visibility="gone" />


</LinearLayout>