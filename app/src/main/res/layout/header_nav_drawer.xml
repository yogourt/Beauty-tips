<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/header_top_padding"
    android:paddingBottom="@dimen/header_bottom_padding"
    android:paddingStart="@dimen/header_horiz_padding"
    android:paddingEnd="@dimen/header_horiz_padding"
    android:orientation="horizontal"
    android:background="@color/pink200">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_photo"
        android:layout_width="@dimen/photo_size"
        android:layout_height="@dimen/photo_size"
        android:layout_marginEnd="@dimen/photo_margin"
        android:contentDescription="@string/description_image"
        android:src="@color/bluegray700"/>

    <TextView
        android:id="@+id/nav_nickname"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="@string/label_anonymous"
        style="@style/UsernameStyle"/>

</LinearLayout>