<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bluegrey900"
    android:orientation="vertical"
    app:layoutDescription="@xml/motion_scene_fragment_one_list">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recipe_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:listitem="@layout/item_recipe_expanded" />

    <View
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_layout_height"
        android:background="@color/black"
        android:elevation="20dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/switch_new"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingStart="@dimen/title_horiz_margin"
        android:background="@color/black"
        android:gravity="center_vertical|end"
        android:text="@string/switch_new"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
        app:layout_constraintBottom_toBottomOf="@+id/line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/line" />

    <TextView
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@color/black"
        android:gravity="center"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="@string/vert_line"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
        app:layout_constraintBottom_toBottomOf="@+id/switch_popular"
        app:layout_constraintStart_toEndOf="@+id/switch_new"
        app:layout_constraintTop_toTopOf="@+id/switch_popular" />

    <TextView
        android:id="@+id/switch_popular"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@color/black"
        android:gravity="center"
        android:text="@string/switch_popular"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintEnd_toStartOf="@+id/title"
        app:layout_constraintStart_toEndOf="@+id/line"
        app:layout_constraintTop_toTopOf="@+id/title" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:elevation="20dp"
        android:padding="@dimen/activity_margin"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/switch_popular"
        tools:text="Sample category" />

    <com.adroitandroid.chipcloud.ChipCloud
        android:id="@+id/subcategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:selectedColor="@color/pink200"
        app:selectedFontColor="@color/white" />

</androidx.constraintlayout.motion.widget.MotionLayout>