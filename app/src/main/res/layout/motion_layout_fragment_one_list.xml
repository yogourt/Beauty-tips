<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bluegrey900"
    app:layoutDescription="@xml/motion_scene_fragment_one_list">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recipe_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:listitem="@layout/item_recipe_expanded"/>

    <View
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_layout_height"
        android:background="@color/black"
        android:elevation="20dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:elevation="20dp"
        android:padding="@dimen/activity_margin"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
        app:layout_constraintTop_toBottomOf="@id/status_bar"
        tools:text="Sample category" />

    <com.adroitandroid.chipcloud.ChipCloud
        android:id="@+id/subcategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:selectedColor="@color/pink200"
        app:selectedFontColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/title" />

</androidx.constraintlayout.motion.widget.MotionLayout>