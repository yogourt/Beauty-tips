<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pink200</item>
        <item name="colorPrimaryVariant">@color/pink300</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/purple300</item>
        <item name="colorSecondaryVariant">@color/purple100</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">@color/bluegrey900</item>
        <item name="colorSurface">@color/bluegrey800_darker</item>
        <item name="elevationOverlayColor">@color/bluegrey700</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="materialAlertDialogTheme">@style/dialogStyle</item>
        <item name="snackbarStyle">@style/snackbarStyle</item>
        <item name="chipStyle">@style/chipStyle</item>
        <item name="android:statusBarColor">@color/purple300</item>
    </style>

    <style name="FullScreenTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="dialogStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@color/bluegrey900</item>
    </style>

    <style name="chipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/pink200</item>
    </style>

    <style name="snackbarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:textColor">@color/white</item>
        <item name="actionTextColorAlpha">1</item>
    </style>

    <style name="ActivityDialogTheme" parent="AppTheme"/>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Navigation drawer -->
    <style name="UsernameStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/username_text_size</item>
        <item name="android:textColor">@color/pink200</item>
        <item name="fontPath">fonts/Lobster2.ttf</item>
    </style>

    <style name="TitleStyle" parent="android:TextAppearance">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/purple100</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="fontPath">fonts/Lobster2.ttf</item>
    </style>

    <style name="ExpandedTitleStyle" parent="TitleStyle">
        <item name="android:textSize">@dimen/exp_title_text_size</item>
    </style>

    <style name="NormalTextStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/bluegrey50</item>
    </style>

    <style name="IngredientStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/ingredients_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="NewIngredientStyle" parent="IngredientStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:tint">@color/white_semi</item>
    </style>

    <style name="NewTipTitleStyle" parent="TitleStyle">
        <item name="android:tint">@color/white_title_tint</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="LoginStyle" parent="FirebaseUI">
        <item name="colorPrimary">@color/pink200</item>
        <item name="colorPrimaryDark">@color/pink300</item>
        <item name="colorAccent">@color/bluegrey50</item>
        <item name="colorControlHighlight">@color/pink300</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="buttonStyle">@style/LoginButton</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:windowBackground">@drawable/login_background</item>
    </style>

    <style name="LoginButton" parent="FirebaseUI.Button">
        <item name="android:textColor">@color/bluegrey900</item>
    </style>

    <style name="DialogStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:background">@color/bluegrey900</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:colorAccent">@color/pink200</item>
    </style>


    <style name="RippleCircularButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">@dimen/inner_button_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/welcome_button_text_size</item>
    </style>

    <style name="SourceTextStyle" parent="NormalTextStyle">
        <item name="android:textSize">@dimen/source_text_size</item>
        <item name="android:textColor">@color/bluegrey300</item>
    </style>

    <style name="IngredientTitleStyle" parent="NormalTextStyle">
        <item name="android:textColor">@color/pink200</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/ingredient_header_text_size</item>
    </style>


    <style name="PopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/bottom_to_top</item>
        <item name="android:windowExitAnimation">@anim/top_to_bottom</item>
    </style>

    <style name="DialogTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/dialog_msg_text_size</item>
    </style>

    <style name="CategoryCircularButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">@dimen/category_button_padding</item>
        <item name="android:layout_margin">@dimen/category_button_margin</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/category_button_background_ripple</item>
    </style>

    
    <style name="FragmentDetailTitle">
        <item name="fontPath">fonts/Lobster2.ttf</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/purple100</item>
    </style>

</resources>
