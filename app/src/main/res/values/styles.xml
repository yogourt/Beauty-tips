<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pink200</item>
        <item name="colorPrimaryDark">@color/pink300</item>
        <item name="colorAccent">@color/bluegray50</item>
        <item name="android:colorBackground">@color/bluegray900</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Navigation drawer -->
    <style name="UsernameStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/username_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">cursive</item>
    </style>

    <style name="ExpandedTitleStyle" parent="TitleStyle">
        <item name="android:textSize">@dimen/exp_title_text_size</item>
    </style>

    <style name="NormalTextStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/bluegray50</item>
    </style>

    <style name="IngredientStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/ingredients_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="NewIngredientStyle" parent="IngredientStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:tint">@color/white_semi</item>
    </style>

    <style name="NewTipTitleStyle" parent="TitleStyle">
        <item name="android:tint">@color/white_title_tint</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="LoginStyle" parent="FirebaseUI">
        <item name="colorPrimary">@color/pink200</item>
        <item name="colorPrimaryDark">@color/pink300</item>
        <item name="colorAccent">@color/bluegray50</item>
        <item name="colorControlHighlight">@color/pink300</item>
        <item name="colorControlNormal">@color/bluegray700</item>
        <item name="colorControlActivated">@color/bluegray700</item>
        <item name="buttonStyle">@style/LoginButton</item>
        <item name="android:textColor">@color/bluegray700</item>
        <item name="android:windowBackground">@drawable/stars_background</item>
    </style>

    <style name="LoginButton" parent="FirebaseUI.Button">
        <item name="android:textColor">@color/bluegray900</item>
    </style>
    
    <style name="DialogStyle" parent="Base.Theme.AppCompat.Dialog" >
        <item name="android:background">@color/bluegray900</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:colorAccent">@color/pink200</item>
    </style>

    <style name="RippleCircularButtonStyle" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">@dimen/inner_button_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/welcome_button_text_size</item>
    </style>

    <style name="SourceTextStyle" parent="NormalTextStyle">
        <item name="android:textSize">@dimen/source_text_size</item>
        <item name="android:textColor">@color/bluegray300</item>
    </style>
</resources>
