<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/bluegrey700_semi">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.listView.view.ingredient.IngredientActivityFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <fragment
            android:id="@+id/fragment_header"
            android:name="com.blogspot.android_czy_java.beautytips.view.detail.DetailHeaderFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include layout="@layout/content_ingredient" />

    </LinearLayout>
</ScrollView>


</FrameLayout>


