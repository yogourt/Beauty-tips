<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/detail_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bluegray700_semi"
        android:layout_marginStart="@dimen/detail_frag_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

       <fragment
           android:id="@+id/fragment_detail_image"
           android:name="com.blogspot.android_czy_java.beautytips.listView.view.DetailImageFragment"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />


        <include layout="@layout/content_detail" />
    </LinearLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/fab_margin"
        android:contentDescription="@string/description_fab"
        android:onClick="changeFavouriteState"
        android:src="@drawable/ic_heart"
        android:tint="@color/bluegray700"
        app:layout_anchor="@id/layout_ingredients"
        app:layout_anchorGravity="bottom|end" />

    <include layout="@layout/layout_ad_banner" />
</android.support.design.widget.CoordinatorLayout>
